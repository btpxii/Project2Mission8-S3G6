<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<!--Navigation menu shared between all pages -->
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Task Tracker</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item mr-2">
                <a asp-controller="Home" asp-action="AddTask"> Add a Task </a>
            </li>
            <li class="nav-item mr-2">
                <a asp-controller="Home" asp-action="Quadrant"> View Your Tasks </a>
            </li>
        </ul>
    </nav>

    <div>
        <h1>@ViewData["Title"]</h1>
        @RenderBody()
    </div>
</body>
</html>
