
@{
    ViewData["Title"] = "Add Task";
}

@model Project2Mission8_S3G6.Models.Task
<div>
    <form method="post">
        <input asp-for="TaskId" type="hidden" /> <br />

        <label asp-for="TaskName"> Task</label>
        <input asp-for="TaskName" />  <br />

        <label asp-for="DueDate"> Due Date</label>
        <input asp-for="DueDate" />  <br />

        <label asp-for="Quadrant">Quadrant</label>
        <select asp-for="Quadrant">
            <option value=1>Quadrant 1</option>
            <option value=2>Quadrant 2</option>
            <option value=3>Quadrant 3</option>
            <option value=4>Quadrant 4</option>
        </select> <br />

        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            <option value="">Select an option</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select> <br />

        <label asp-for="Completed">Completed</label>
        <select asp-for="Completed">
            <option value="true"> True</option>
            <option value="false"> False</option>
        </select>  <br />

        <button type="submit">Submit</button>
        <br /><br />
        <div asp-validation-summary="All"></div>

    </form>
</div>